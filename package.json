{
  "name": "tui-booking-automation",
  "version": "1.0.0",
  "description": "Playwright + TypeScript automation framework for TUI booking journey",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:smoke": "playwright test --grep @smoke",
    "test:e2e": "playwright test --grep @e2e",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "test:allure": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "install:browsers": "playwright install",
    "docker:build": "docker build -t tui-booking-automation .",
    "docker:run": "docker-compose up --build"
  },
  "keywords": [
    "playwright",
    "typescript",
    "automation",
    "testing",
    "tui"
  ],
  "author": "QA Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "allure-commandline": "^2.24.1",
    "allure-playwright": "^2.10.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "@playwright/test": "^1.48.0"
  }
}
